<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace = "com.ppg.policy.persistence">

<select id="getHotList">
	select
 	dept
	, title
	, category
    from policy_list
  where dept = #{dept}
	
</select>

</mapper>